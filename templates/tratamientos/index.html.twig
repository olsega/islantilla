{% extends 'base.html.twig' %}

{% block title %}Tratamientos index{% endblock %}

{% block body %}
    <h1>Tratamientos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_tratamiento</th>
                <th>Nombre_tratamiento</th>
                <th>Precio</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tratamiento in tratamientos %}
            <tr>
                <td>{{ tratamiento.id }}</td>
                <td>{{ tratamiento.idTratamiento }}</td>
                <td>{{ tratamiento.nombreTratamiento }}</td>
                <td>{{ tratamiento.precio }}</td>
                <td>{{ tratamiento.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_tratamientos_show', {'id': tratamiento.id}) }}">show</a>
                    <a href="{{ path('app_tratamientos_edit', {'id': tratamiento.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tratamientos_new') }}">Create new</a>
{% endblock %}
